                        android:id="@+id/estrella1_llena3"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginRight="7dp"
                        app:srcCompat="@drawable/Recurso29EstrellaRellena" />
                    <ImageView
                        android:id="@+id/estrella1_llena4"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginRight="7dp"
                        app:srcCompat="@drawable/Recurso29EstrellaRellena" />
                    <ImageView
                        android:id="@+id/estrella1_vacia5"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginRight="7dp"
                        app:srcCompat="@drawable/Recurso30EstrellaNoRellena" />

                </GridLayout>
                <TextView
                    android:id="@+id/descriptionTitle_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:textSize="22dp"
                    android:text="Descripcion"
                    android:textColor="@color/principal_color_dark_green"
                    />
                <TextView
                    android:id="@+id/description_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:textSize="15dp"
                    android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget, porta phasellus nascetur ullamcorper faucibus senectus felis mus volutpat."
                    android:textColor="@color/letter_dark_gray"
                    />
                <TextView
                    android:id="@+id/timetableTitle_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:textSize="22dp"
                    android:text="Horario"
                    android:textColor="@color/principal_color_dark_green"
                    />
                <TextView
                    android:id="@+id/timetable_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:textSize="15dp"
                    android:text="De 9:00 a.m a 10:00 pm"
                    android:textColor="@color/letter_dark_gray" />

                <TextView
                    android:id="@+id/ubicationTitle_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:textSize="22dp"
                    android:text="Ubicacion"
                    android:textColor="@color/principal_color_dark_green"
                    />

                <fragment
                    android:id="@+id/mapa"
                    android:layout_marginTop="10dp"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:radius="150dp"

                    />

                <TextView
                    android:id="@+id/galeryTitle_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:textSize="22dp"
                    android:text="Galeria de Imagenes"
                    android:textColor="@color/principal_color_dark_green"
                    />


                <GridLayout
                    android:id="@+id/gridlayout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:columnCount="4"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="32dp">

                    <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="7dp"
                        app:corner_radius="16dp"
                        android:background="#000">


                        <ImageView
                            android:id="@+id/imagen_galaria1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/restaurante1_1" />


                    </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>

                    <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="7dp"
                        app:corner_radius="16dp"
                        android:background="#000">


                        <ImageView
                            android:id="@+id/imagen_galaria2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/restaurante1_2" />


                    </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>

                    <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="7dp"
                        app:corner_radius="16dp"
                        android:background="#000">


                        <ImageView
                            android:id="@+id/imagen_galaria3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/restaurante1_3" />


                    </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>

                    <com.jcminarro.roundkornerlayout.RoundKornerFrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="7dp"
                        app:corner_radius="16dp"
                        android:background="#000">

                        <ImageView
                            android:id="@+id/imagen_galaria4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/restaurante1_4" />


                    </com.jcminarro.roundkornerlayout.RoundKornerFrameLayout>



                </GridLayout>




            </LinearLayout>

            <ImageView
