<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <RelativeLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/pollo.jpg"
                android:layout_width="fill_parent"
                android:layout_height="255dp"
                android:layout_marginTop="-15dp"
                app:srcCompat="@drawable/pollo"/>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="524dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="204dp"
                android:background="@drawable/layaout_product"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/name_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:textSize="30dp"
                    android:text="Arbol de Seda"
                    android:textColor="@color/principal_color_dark_green"
                    />
                <TextView
                    android:id="@+id/type_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:textSize="20dp"
                    android:text="Restaurante vegetariano"
                    android:textColor="@color/letter_dark_gray"
                    />

                <GridLayout
                    android:id="@+id/gridlayout_estrellas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5"
                    android:paddingStart="32dp"
                    android:padding="10dp"
                    android:paddingTop="0dp"
                    android:gravity="center"
                    android:paddingLeft="32dp">

                <ImageView
                    android:id="@+id/estrella1_llena1"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginRight="7dp"
                    app:srcCompat="@drawable/Recurso29EstrellaRellena" />
                    <ImageView
                        android:id="@+id/estrella1_llena2"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginRight="7dp"
                        app:srcCompat="@drawable/Recurso29EstrellaRellena" />
